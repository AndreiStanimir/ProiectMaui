<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMaui.WeatherChartPage"
             xmlns:viewmodels="clr-namespace:ProiectMaui"
             Title="Weather Chart"
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <viewmodels:WeatherChartViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center" VerticalOptions="Start">

            <Label Text="Select Date Range" FontSize="Medium" HorizontalOptions="Center"/>
            <DatePicker x:Name="fromDatePicker" Format="D" HorizontalOptions="Fill"/>
            <DatePicker x:Name="toDatePicker" Format="D" HorizontalOptions="Fill"/>

            <Label Text="Select a City" FontSize="Medium" HorizontalOptions="Center"/>
            <Picker x:Name="cityPicker" Title="Select a City" HorizontalOptions="Fill" 
                    ItemsSource="{Binding Cities}"
                    ItemDisplayBinding="{Binding Name}" >
                <!-- Items will be populated dynamically -->
            </Picker>

            <!-- Placeholder for Weather Chart -->
            <Frame BorderColor="LightGray" Padding="5" CornerRadius="10">
                <Label Text="Weather Chart Will Appear Here" HorizontalOptions="Center" VerticalOptions="Center" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
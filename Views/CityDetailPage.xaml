<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMaui.CityDetailPage"
             Title="City Details">

    <StackLayout Padding="10">
        <Label Text="{Binding MajorCity.Name}" 
               FontSize="Large" 
               FontAttributes="Bold"/>
        <!-- Display other details like temperature, humidity, etc. -->
        <Label Text="{Binding MajorCity.Temp}" 
               FontAttributes="Italic"/>
        <!-- Add more labels for other properties -->
    </StackLayout>
</ContentPage>

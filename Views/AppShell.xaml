<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectMaui"
    Shell.FlyoutBehavior="Locked"
    Title="ProiectMaui">

    <!-- Home -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:CityListPage}"
        Route="HomePage" />

    <!-- City Details -->
    <ShellContent
        Title="City Details"
        ContentTemplate="{DataTemplate local:CityDetailPage}"
        Route="CityDetails" />

    <!-- Weather Analysis -->
    <ShellContent
        Title="Weather Analysis"
        ContentTemplate="{DataTemplate local:WeatherChartPage}"
        Route="WeatherChartPage" />

